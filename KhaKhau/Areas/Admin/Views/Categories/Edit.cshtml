@model KhaKhau.Areas.Admin.Models.Category
@{
    ViewData["Title"] = "Sửa danh mục";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="container py-4">
    <h2>Sửa danh mục</h2>
    <form asp-action="Edit" method="post" class="card p-4 shadow">
        <input type="hidden" asp-for="Id" />
        <div class="form-group">
            <label for="Name">Tên danh mục</label>
            <input asp-for="Name" class="form-control" placeholder="Nhập tên danh mục" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="mt-3">
            <button type="submit" class="btn btn-primary">
                <i class="fas fa-save"></i> Lưu
            </button>
            <a class="btn btn-secondary" href="@Url.Action("Index", "Categories", new { area = "Admin" })">
                <i class="fas fa-arrow-left"></i> Quay lại
            </a>
        </div>
    </form>
</div>
