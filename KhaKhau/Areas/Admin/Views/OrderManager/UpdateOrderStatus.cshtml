@using KhaKhau.Models;
@model UpdateOrderStatusModel
@{
    ViewData["Title"] = "UpdateOrderStatus";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<link href="~/admin/css/updatestatus.css" rel="stylesheet" />
<!-- Import Stylesheets -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
<link href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" rel="stylesheet">
<link href="/admin/css/updateorderstatus.css" rel="stylesheet">

<div class="container py-4 animate__animated animate__fadeIn">
    <!-- Page Header -->
    <div class="page-header text-center mb-4">
        <h2 class="text-primary">Cập nhật trạng thái đơn hàng</h2>
    </div>

    <!-- Back Button -->
    <div class="mb-3">
        <a class="btn btn-secondary back-button d-flex align-items-center gap-2" asp-action="AllOrders">
            <i class="fas fa-arrow-left"></i> Quay lại
        </a>
    </div>

    <!-- Update Form -->
    <form asp-action="UpdateOrderStatus" class="update-form p-4 bg-white rounded shadow-sm animate__animated animate__fadeInUp">
        <input type="hidden" asp-for="OrderId" />

        <!-- Order Status -->
        <div class="form-group mb-4">
            <label for="OrderStatusId" class="form-label fw-bold text-secondary">Trạng thái đơn hàng</label>
            <select class="form-select" asp-for="OrderStatusId" asp-items="@Model.OrderStatusList">
                <option value="">--Chọn trạng thái đơn hàng--</option>
            </select>
            <span class="text-danger" asp-validation-for="OrderStatusId"></span>
        </div>

        <!-- Submit Button -->
        <div class="text-center">
            <button type="submit" class="btn btn-primary d-flex align-items-center gap-2 mx-auto">
                <i class="fas fa-save"></i> Cập nhật
            </button>
        </div>

        <!-- TempData Message -->
        @if (TempData["msg"] != null)
        {
            <div class="alert alert-info mt-4">
                @TempData["msg"]
            </div>
        }
    </form>
</div>
