<script>
    let currentPosition = { chefs: 0 };
    const itemsPerSlide = 4; // Chỉ hiện 4 đầu bếp tại một thời điểm

    function moveSlide(section, direction) {
        const content = document.getElementById(`${section}-content`);
        const items = content.children;
        const totalItems = items.length;
        const maxPosition = Math.ceil(totalItems / itemsPerSlide) - 1;

        currentPosition[section] += direction;

        if (currentPosition[section] < 0) {
            currentPosition[section] = 0;
        } else if (currentPosition[section] > maxPosition) {
            currentPosition[section] = maxPosition;
        }

        const translateX = -(currentPosition[section] * (100 / itemsPerSlide));
        content.style.transform = `translateX(${translateX}%)`;
    }

    function autoSlide() {
        moveSlide('chefs', 1);
    }

    // Tự động chuyển slide sau mỗi 5 giây
    setInterval(autoSlide, 5000);

    // Khởi tạo ban đầu
    window.onload = function () {
        document.querySelectorAll('.slide-content').forEach(content => {
            content.style.transform = 'translateX(0%)';
        });
    };
    document.querySelectorAll('.achievement-item .number').forEach(item => {
        const count = parseInt(item.getAttribute('data-count'));
        let currentCount = 0;
        const increment = Math.ceil(count / 100); // Tăng dần số từ 0 đến count

        const updateCount = setInterval(() => {
            currentCount += increment;
            if (currentCount >= count) {
                currentCount = count;
                clearInterval(updateCount);
            }
            item.textContent = currentCount;
        }, 50); // Thay đổi tốc độ đếm nếu cần
    });
</script>
