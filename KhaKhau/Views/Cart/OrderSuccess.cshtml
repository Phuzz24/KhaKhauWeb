@{
    Layout = null;
}

<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet" />

<div class="container success-container mt-5 d-flex justify-content-center align-items-center">
    <div class="card p-5 text-center">
        <div class="mb-4">
            <img src="~/images/logo_res.png" width="100px" />
        </div>
        <h2 class="text-success mb-3">Đặt hàng thành công!</h2>
        <p class="mb-1">Cảm ơn bạn, đơn hàng của bạn đã được xử lý thành công.</p>

        <p><strong>Mã đơn hàng:</strong> @TempData["OrderId"]</p>
        <p>Chúng tôi đang chuẩn bị giao hàng cho bạn.</p>

        <hr />

        <div class="user-info my-3">
            <p><strong>Khách hàng:</strong> @TempData["OrderUserName"]</p>
            <p><strong>Địa chỉ giao hàng:</strong> @TempData["OrderAddress"]</p>
        </div>

        <div class="btn-group">
            <a href="/" class="btn btn-primary">
                <i class="fas fa-home"></i> Về Trang Chủ
            </a>
            <a asp-controller="Product" asp-action="Index" class="btn btn-success">
                <i class="fas fa-shopping-cart"></i> Thêm món thêm vui!
            </a>
        </div>
    </div>
</div>

<style>
    .success-container {
        min-height: 80vh;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .card {
        max-width: 500px;
        border: none;
        box-shadow: 0px 4px 12px rgba(0, 0, 0, 0.1);
        border-radius: 10px;
    }

    .text-success {
        color: #28a745;
        font-weight: bold;
    }

    .btn-group .btn {
        margin: 10px 5px;
        padding: 10px 20px;
        font-size: 16px;
    }
</style>


<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script>
    document.addEventListener("DOMContentLoaded", function () {
        Swal.fire({
            title: 'Đặt hàng thành công!',
            text: 'Cảm ơn bạn đã đặt hàng. Đơn hàng của bạn sẽ được xử lý.',
            icon: 'success',
            confirmButtonText: 'OK'
        });
    });
</script>
